<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_bg">

    <View
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:background="@color/colorPrimary" />

    <RelativeLayout
        android:id="@+id/nav_rela"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@id/top"
        android:background="@color/white"
        android:visibility="visible">

        <TextView
            android:id="@+id/LeftTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="借款详情"
            android:textColor="@color/nav_blue"
            android:textSize="16sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/LeftIB"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/img_help"
            android:visibility="gone" />

        <TextView
            android:id="@+id/TitleTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="借 款"
            android:textColor="@color/nav_blue"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/RightIB"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@mipmap/news"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/nav_blue" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/status_Scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/nav_rela"
        android:visibility="visible">

        <com.handmark.pulltorefresh.library.PullToRefreshScrollView
            android:id="@+id/scroll_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llLoanMenu"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvText1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="签约"
                            android:textColor="@color/nav_blue"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/ivImage1"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="3dp"
                            android:background="@mipmap/img_loan_1" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivLine1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:background="@mipmap/img_jiantou_gray" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvText2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="审核中"
                            android:textColor="@color/text_grey"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/ivImage2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="3dp"
                            android:background="@mipmap/img_loan2_gray" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivLine2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:background="@mipmap/img_jiantou_gray" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvText3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="放款"
                            android:textColor="@color/text_grey"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/ivImage3"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="3dp"
                            android:background="@mipmap/img_loan3_gray" />
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/llLoan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingBottom="30dp">

                        <LinearLayout
                            android:id="@+id/llTopSign"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="借款协议"
                                android:textColor="@color/nav_blue"
                                android:textSize="13sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:background="@drawable/frame_gray_white_15"
                                android:orientation="vertical"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="35dp"
                                        android:layout_alignParentLeft="true"
                                        android:layout_marginLeft="30dp"
                                        android:gravity="center_vertical"
                                        android:text="借款姓名:"
                                        android:textColor="@color/score_font"
                                        android:textSize="13sp" />

                                    <TextView
                                        android:id="@+id/jiekuanren"
                                        android:layout_width="wrap_content"
                                        android:layout_height="35dp"
                                        android:layout_marginLeft="110dp"
                                        android:gravity="center_vertical"
                                        android:textColor="@color/detail_cash"
                                        android:textSize="14sp" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentLeft="true"
                                        android:layout_marginLeft="30dp"
                                        android:gravity="center_vertical"
                                        android:text="借款金额:"
                                        android:textColor="@color/score_font"
                                        android:textSize="13sp" />

                                    <TextView
                                        android:id="@+id/jine"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="110dp"
                                        android:gravity="center_vertical"
                                        android:textColor="@color/detail_cash"
                                        android:textSize="14sp" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentLeft="true"
                                        android:layout_marginLeft="30dp"
                                        android:gravity="center_vertical"
                                        android:text="借款时长:"
                                        android:textColor="@color/score_font"
                                        android:textSize="13sp" />

                                    <TextView

                                        android:id="@+id/shichang"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="110dp"
                                        android:gravity="center_vertical"
                                        android:textColor="@color/detail_cash"
                                        android:textSize="14sp" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentLeft="true"
                                        android:layout_marginLeft="30dp"
                                        android:gravity="center_vertical"
                                        android:text="综合费用:"
                                        android:textColor="@color/score_font"
                                        android:textSize="13sp" />

                                    <TextView
                                        android:id="@+id/zongheFee"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="110dp"
                                        android:gravity="center_vertical"
                                        android:textColor="@color/detail_cash"
                                        android:textSize="14sp" />

                                    <ImageView
                                        android:id="@+id/fee_image"
                                        android:layout_width="23dp"
                                        android:layout_height="23dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_toRightOf="@+id/zongheFee"
                                        android:background="@mipmap/wenhao"
                                        android:visibility="gone" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentLeft="true"
                                        android:layout_marginLeft="30dp"
                                        android:gravity="center_vertical"
                                        android:text="还款方式:"
                                        android:textColor="@color/score_font"
                                        android:textSize="13sp" />

                                    <TextView

                                        android:id="@+id/fangshi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="110dp"
                                        android:gravity="center_vertical"
                                        android:textColor="@color/detail_cash"
                                        android:textSize="14sp" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentLeft="true"
                                        android:layout_marginLeft="30dp"
                                        android:gravity="center_vertical"
                                        android:text="还款日期:"
                                        android:textColor="@color/score_font"
                                        android:textSize="13sp" />

                                    <TextView

                                        android:id="@+id/riqi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="110dp"
                                        android:gravity="center_vertical"
                                        android:textColor="@color/detail_cash"
                                        android:textSize="14sp" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentLeft="true"
                                        android:layout_marginLeft="30dp"
                                        android:gravity="center_vertical"
                                        android:text="逾期政策:"
                                        android:textColor="@color/score_font"
                                        android:textSize="13sp" />

                                    <TextView
                                        android:id="@+id/zhengce"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="110dp"
                                        android:gravity="center_vertical"
                                        android:textColor="@color/detail_cash"
                                        android:textSize="14sp" />
                                </RelativeLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center">

                                <CheckBox
                                    android:id="@+id/mCheckBox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:button="@drawable/check_state" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:text="我同意"
                                    android:textColor="@color/detail_cash"
                                    android:textSize="13sp" />

                                <TextView
                                    android:id="@+id/tvAgreement"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:background="@color/clear_color"
                                    android:text="《极速钱包借款合同》"
                                    android:textColor="@color/text_red"
                                    android:textSize="15sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llOther"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:visibility="gone">

                                <CheckBox
                                    android:id="@+id/cbOther"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:button="@drawable/check_state" />

                                <TextView
                                    android:id="@+id/tvOther"
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:gravity="center"
                                    android:textColor="@color/nav_blue"
                                    android:textSize="13sp" />

                            </LinearLayout>

                            <Button
                                android:id="@+id/btSign"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/btn_cut"
                                android:text="确定签约"
                                android:textColor="@color/white"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/flWeb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <com.ahxbapp.jsqb.customview.NoScrollWebView xmlns:android="http://schemas.android.com/apk/res/android"
                                android:id="@+id/webView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </FrameLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llKeFu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="30dp"
                        android:visibility="gone">

                        <RelativeLayout
                            android:id="@+id/rlNotVip"
                            android:layout_width="220dp"
                            android:layout_height="220dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@mipmap/img_loan_cicle" />

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:layout_centerInParent="true"
                                android:background="@mipmap/img_loan_examine" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlVip"
                            android:layout_width="wrap_content"
                            android:layout_height="220dp"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="220dp"
                                android:layout_height="215dp"
                                android:background="@mipmap/img_loan_vip" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tvKeFuMsg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="45dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/detail_cash"
                            android:textSize="13sp" />

                        <Button
                            android:id="@+id/btKefu"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/btn_cut"
                            android:text="微信客服"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/rlLoan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/img_gif_loan" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="30dp"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:text="您的借款正在路上……"
                                android:textColor="@color/red_f75"
                                android:textSize="13sp"
                                android:visibility="gone" />

                            <Button
                                android:id="@+id/btFinish"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/shape_gray_15"
                                android:text="您的钱款已在路上"
                                android:textColor="@color/white"
                                android:textSize="15sp" />
                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>


        </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

    </RelativeLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/scroll_none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/nav_rela"
        android:background="@color/all_bg"
        android:visibility="visible">


        <LinearLayout
            android:id="@+id/llRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@mipmap/img_main_top"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMainTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="借 款"
                    android:textColor="@color/white"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/tvMainDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="可借额度"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvMainMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="￥10000"
                    android:textColor="@color/white"
                    android:textSize="21sp" />


            </LinearLayout>

            <Button
                android:id="@+id/btApply"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="-20dp"
                android:background="@drawable/shape_white_5"
                android:gravity="center"
                android:text="我要借款"
                android:textColor="@color/nav_blue"
                android:textSize="15sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="-20dp"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="温馨提示"
                        android:textColor="@color/nav_blue"
                        android:id="@+id/tvTips1"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:id="@+id/tvTips2"
                        android:text="以下是今日借款到期应还时间与最高借款额度"
                        android:textColor="@color/nav_blue"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvMoney"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥10000元"
                                android:textColor="@color/nav_blue"
                                android:textSize="17sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="金额"
                                android:textColor="@color/nav_blue"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/color_E5E5E5" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvDay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/nav_blue"
                                android:textSize="17sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="还款日期"
                                android:textColor="@color/nav_blue"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/img_notice" />

                <com.xiaosu.VerticalRollingTextView
                    android:id="@+id/rollingView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:duration="2000" />

            </LinearLayout>

